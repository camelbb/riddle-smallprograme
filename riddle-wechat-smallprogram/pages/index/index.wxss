/* index.wxss */

.theme-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.theme-item {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.theme-item:active {
  background-color: #f0f0f0;
}

.theme-icon {
  margin-bottom: 20rpx;
}

.theme-name {
  font-size: 28rpx;
  color: #333333;
}

.custom-theme {
  margin-bottom: 40rpx;
}

.instructions {
  background-color: #fff8e6;
  padding: 30rpx;
  border-radius: 20rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}